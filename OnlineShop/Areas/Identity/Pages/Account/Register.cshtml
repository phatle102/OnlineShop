    <!-- Bootstrap Core CSS -->
    <link href="~/LayoutAdmin/css/bootstrap.min.css" rel="stylesheet">

    <!-- MetisMenu CSS -->
    <link href="~/LayoutAdmin/css/metisMenu.min.css" rel="stylesheet">

    <!-- Custom CSS -->
