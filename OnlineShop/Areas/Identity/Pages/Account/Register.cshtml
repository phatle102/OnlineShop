    <!--[if lt IE 9]>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>

<body>
    <div class="product-bg">
        <div class="product-bg-white">
            <div class="container">
                <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Please Sign Up</h3>
                    </div>
                    <div class="panel-body">
                        <form asp-route-returnUrl="@Model.ReturnUrl"  method="post">
                            <fieldset>
                                <div class="form-group">
                                    <input asp-for="Input.FirstName" placeholder="FirstName" class="form-control" autocomplete="username" aria-required="true" />
                                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                                    @*<input class="form-control" placeholder="E-mail" name="email" type="email" autofocus="">*@
                                </div>
                                <div class="form-group">
                                    <input asp-for="Input.LastName" placeholder="LastName" class="form-control" autocomplete="username" aria-required="true" />
                                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                                    @*<input class="form-control" placeholder="E-mail" name="email" type="email" autofocus="">*@
                                </div>
                                <div class="form-group">
                                    <input asp-for="Input.Address" placeholder="Address" class="form-control" autocomplete="current-password" aria-required="true" />
                                    <span asp-validation-for="Input.Address" class="text-danger"></span>
                                    @*<input class="form-control" placeholder="Password" name="password" type="password" value="">*@
                                </div>
                                <div class="form-group">
                                    <input asp-for="Input.Email" placeholder="E-mail" class="form-control" autocomplete="username" aria-required="true" />
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    @*<input class="form-control" placeholder="E-mail" name="email" type="email" autofocus="">*@
                                </div>
                                <div class="form-group">
                                    <input asp-for="Input.Password" placeholder="Password" class="form-control" autocomplete="current-password" aria-required="true" />
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    @*<input class="form-control" placeholder="Password" name="password" type="password" value="">*@
                                </div>

                                <div class="form-floating">
                                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                                    <label asp-for="Input.ConfirmPassword"></label>
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                </div>

                               
                     
                                <!-- Change this to a button or input when using this as a form -->
                                @*<a href="index.html" class="btn btn-lg btn-success btn-block">Login</a>*@

                                <button id="login-submit" type="submit" class="btn btn-lg btn-warning btn-block">Sign up</button>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    </div>

    <!-- jQuery -->
    <script src="~/LayoutAdmin/js/jquery.min.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="~/LayoutAdmin/js/bootstrap.min.js"></script>

    <!-- Metis Menu Plugin JavaScript -->
    <script src="~/LayoutAdmin/js/metisMenu.min.js"></script>

    <!-- Custom Theme JavaScript -->
    <script src="~/LayoutAdmin/js/startmin.js"></script>




</body>
</html>


