@model List<OnlineShop.Models.Category>


<table width="80%" border="1" style="solid white;
  border-collapse: collapse; background-color: #96D4D4;">

    <tr>
        <td>ID</td>
        <td>Category Name</td>
        <td>Description</td>
        <td>Chức năng</td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CategoryId</td>
            <td>@item.CategoryName</td>
            <td>@item.Description</td>
     
            <td>
                <a asp-action="EditCategory" asp-route-id="@item.CategoryId">
                    Edit
                </a>

                <a asp-action="DeleteCategory" asp-route-id="@item.CategoryId">
                    Delete
                </a>
            </td>

        </tr>
    }
</table>

